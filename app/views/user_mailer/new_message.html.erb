<table style="border-radius: 1px;" align="center"; bgcolor="#fff" border="0" cellpadding="0" cellspacing="0" class="wrapper" class="container">
  <tbody>

    <tr>
      <td height="30" style="font-size:30px; line-height:30px;" class="mobileOn">&nbsp;</td>
    </tr>

    <tr>
      <td>
        <table  align="center" width="600" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <td align="center" valign="top">
                <img src="https://media.giphy.com/media/8PjqMa7AkAU5al1aTG/giphy.gif" width="50" border="0" alt="FMA">
            </td>
          </tr>

          <tr>
            <td height="30" style="font-size:30px; line-height:30px;" class="mobileOn">&nbsp;</td>
          </tr>

      <!-- Destinataire du mail -->

          <tr>
            <td align="center" valign="top" style="letter-spacing:0.025em; padding:0px 60px 0px 60px; font-family: Helvetica Neue,Helvetica,Arial,sans-serif; font-weight: bold; text-align: center; font-size: 22px; color: #182335; line-height: 30px;">
              Bonjour <%= @user.first_name %>,<br>
            </td>
          </tr>

          <tr>
            <td height="15" style="font-size:15px; line-height:15px;" class="mobileOn">&nbsp;</td>
          </tr>

          <tr>
            <td align="center" valign="top" style="letter-spacing:0.025em; padding:0px 60px 0px 60px; font-family: Helvetica Neue,Helvetica,Arial,sans-serif; font-weight: bold; text-align: center; font-size: 16px; color: #585855; line-height: 22px;">
              <%= @author %> vous a laissé un nouveau message. Pour y répondre, rendez-vous sur votre espace Intercom.
            </td>
          </tr>

      <!-- 1er Trait du mail -->

          <tr>
            <td height="30" style="font-size:30px; line-height:30px;" class="mobileOn">&nbsp;</td>
          </tr>

          <tr>
            <td align="center">
              <table align="center" width="480" border="0" cellpadding="0" cellspacing="0" bgcolor="#e2e2e2">
              <tbody>
                <tr>
                  <td height="1" style="font-size: 1px; line-height: 1px;"></td>
                </tr>
              </tbody>
              </table>
            </td>
          </tr>

          <tr>
            <td height="30" style="font-size:30px; line-height:30px;" class="mobileOn">&nbsp;</td>
          </tr>

      <!-- 1er Notification du mail -->

          <tr>
            <td>
                <table align="left" width="70" cellpadding="0" cellspacing="0">
                <tbody>
                  <tr>
                    <td align="left" valign="top" style="padding-left: 70px;">
                      &nbsp;
                    </td>
                  </tr>
                </tbody>
              </table>

              <table align="left" width="20" cellpadding="0" cellspacing="0">
                <tbody>
                  <tr>
                    <td height="22" style="font-size: 22px; line-height: 22px;"></td>
                  </tr>
                </tbody>
              </table>

              <table align="left" width="390" cellpadding="0" cellspacing="0">
                <tbody>
                  <tr>
                    <td align="left" valign="top" style="padding-right: 70px;">
                    <tr>
                      <td align="left" style="font-family: Helvetica Neue,Helvetica,Arial,sans-serif; text-align: left; letter-spacing:0.025em;font-size: 16px; color: #000;">
                        <span style="font-family: Helvetica Neue,Helvetica,Arial,sans-serif; text-align: left; letter-spacing:0.025em;font-size: 12px; color: #585855; line-height: 26px; font-weight: bold;">À <%= @create_at %>, <%= @author %> a envoyé :</span><br>
                        <span style="font-family: Helvetica Neue,Helvetica,Arial,sans-serif; text-align: left; letter-spacing:0.025em;font-size: 14px; color: #182335; line-height: 22px; font-weight: normal;"><%= @message %></span>
                    </td>
                    </tr>
                  </tr>

                </tbody>
              </table>
            </td>
          </tr>

      <!-- 2ieme Trait du mail -->

          <tr>
            <td height="30" style="font-size:30px; line-height:30px;" class="mobileOn">&nbsp;</td>
          </tr>

          <tr>
            <td align="center">
              <table align="center" width="480" border="0" cellpadding="0" cellspacing="0" bgcolor="#e2e2e2">
              <tbody>
                <tr>
                  <td height="1" style="font-size: 1px; line-height: 1px;"></td>
                </tr>
              </tbody>
              </table>
            </td>
          </tr>

          <tr>
            <td height="50" style="font-size:50px; line-height:50px;" class="mobileOn">&nbsp;</td>
          </tr>

      <!-- Bouton du mail -->

          <tr>
            <td align="center">
            <table align="center" width="270" cellspacing="0" cellpadding="0">
              <tbody>
                <td height="40" align="center" bgcolor="#fff" style="border-radius: 2px; border: 2px solid #182335; text-align: center;" valign="middle">


                    <a href="<%= @url %>" style="font-size: 14px; font-weight: normal; font-family: Helvetica Neue,Helvetica,Arial,sans-serif; font-weight: bold; color: #182335; text-align: center; text-decoration: none; line-height: 40px; display: block; height: 40px;">
                      Voir et répondre au message
                    </a>
                </td>
              </tbody>
            </table>
            </td>
          </tr>

        </table>
      </td>
    </tr>

    <tr>
      <td height="50" style="font-size:50px; line-height:50px;" class="mobileOn">&nbsp;</td>
    </tr>

  </tbody>
</table>
